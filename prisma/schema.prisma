generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:postgres@localhost:5432/postgres"
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  name     String

  posts Post[]

  @@map("users")
}

model Post {
  id    Int    @id @default(autoincrement())
  title String
  body  String

  author    User @relation(fields: [author_id], references: [id])
  author_id Int

  @@map("posts")
}
